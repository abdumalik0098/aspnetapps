@model HabbitApp.Models.Habbit

<h2>Добавление пользователя</h2>

<form asp-action="create" asp-controller="home">
    <p>
        <label asp-for="Name">Имя</label><br />
        <input type="text" asp-for="Name" />
    </p>
    <p>
        <label asp-for="Trigger">Триггер</label><br />
        <input type="text" asp-for="Trigger" />
    </p>
    <p>
        <label asp-for="Duration">Продолжительность</label><br />
        <input type="number" asp-for="Duration" />
    </p>
    <p>
        <label asp-for="Timer">Таймер</label><br />
        <input type="number" asp-for="Timer" />
    </p>
    <p>
        <label asp-for="Reward">Награда</label><br />
        <input type="text" asp-for="Reward" />
    </p>
    <p>
        <input type="submit" value="Добавить" />
    </p>
</form>