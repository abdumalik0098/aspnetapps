@page
@model UgadayApp.Pages.UgadayModel
@{
    ViewData["Title"] = "Game Page";
}
<h4>Игра Угадайка</h4>
<span>Задайте число от 1 до 10</span><br />
<br />
<form method="post">
    <p>
        <input type="number" name="usernum" />
        <input type="submit" value="Угадать" />
    </p>
</form>
@if(Model.Val != 0 && Model.UserNum != 0){
    
    <h4>Результат: </h4>
    if(Model.Val == Model.UserNum)
    {
        
        <div class="btn btn-success">Верно!</div>
        <div>User: @Model.UserNum</div>
        <div>Value of Random: @Model.Val</div>
    }
    else if(Model.Val != Model.UserNum)
    {
      
        <div class="btn btn-danger">Неверно!</div>
        <div>User: @Model.UserNum</div>
        <div>Value of Random: @Model.Val</div>
    }
}
